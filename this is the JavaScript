let firstCard = 4
let secondCard = 8
let sum = firstCard + secondCard
let hasBlackJack = false // to keep track of the state of the game 
let isAlive = true
let message = ""


if (sum <= 20){
message = "Do you want to draw a new card?"
}
else if(sum === 21){
 message = "you won!"
  hasBlackJack = true
}
else if (sum > 21) {
  message = "you are out of the game :( "
  isAlive = false
}




